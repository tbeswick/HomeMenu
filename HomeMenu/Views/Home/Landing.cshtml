@{
    Layout = "";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HomeMenu</title>
    <link rel="stylesheet" href="~/Content/assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/assets/fonts/ionicons.min.css" />
    <link rel="stylesheet" href="~/Content/assets/css/Login-Form-Dark.css" />
    <link rel="stylesheet" href="~/Content/assets/css/styles.css" />


</head>
<body>

    <div class="login-dark">
    
        <div class="landing-title">
            Home Menu
        </div>
        <div class="landing-form">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit" style="background-color:#8f8f8f;">Log In</button>
                </div><a href="#" class="forgot">Forgot your email or password?</a>
            }
        </div>
    </div>    
</body>
</html>